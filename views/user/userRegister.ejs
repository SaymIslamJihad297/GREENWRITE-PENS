<%- layout('./layout/boilerplate.ejs') %>
    <section class="min-h-screen bg-gradient-to-r from-gray-800 via-gray-900 to-black text-white py-12">
        <div class="container mx-auto max-w-md p-6 bg-gray-800 rounded-xl shadow-lg shadow-green-500/50">
            <h2 class="text-3xl font-extrabold text-center text-green-400 mb-8">Create an Account</h2>
            <form action="/register" method="POST" class="space-y-6">
                <!-- Name input -->
                <div>
                    <label for="name" class="block text-lg font-semibold">Full Name</label>
                    <input type="text" name="user[name]" required
                        class="w-full p-4 mt-2 border border-green-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-700 text-white" />
                </div>

                <!-- Username input -->
                <div>
                    <label for="username" class="block text-lg font-semibold">Username</label>
                    <input type="text" name="user[username]" required
                        class="w-full p-4 mt-2 border border-green-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-700 text-white" />
                </div>

                <!-- Email input -->
                <div>
                    <label for="email" class="block text-lg font-semibold">Email</label>
                    <input type="email" name="user[email]" required
                        class="w-full p-4 mt-2 border border-green-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-700 text-white" />
                </div>

                <!-- Password input -->
                <div>
                    <label for="password" class="block text-lg font-semibold">Password</label>
                    <input type="password" name="password" required
                        class="w-full p-4 mt-2 border border-green-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 bg-gray-700 text-white" />
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="w-full bg-green-600 hover:bg-green-700 text-white py-3 rounded-lg transition duration-300 transform hover:scale-105">
                        Register
                    </button>
                </div>
            </form>

            <p class="mt-6 text-center text-sm text-gray-300">
                Already have an account? <a href="/login"
                    class="text-green-400 hover:text-green-500 font-semibold">Login</a>
            </p>
        </div>
    </section>