<%- layout('./layout/boilerplate.ejs') %>
    <section
        class="bg-gradient-to-r from-gray-800 via-gray-900 to-black bg-opacity-30 backdrop-blur-md min-h-screen text-white">
        <div class="container mx-auto py-12">
            <!-- Dashboard Header -->
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold">Admin Dashboard</h1>
                <button
                    class="bg-green-600 hover:bg-green-700 text-white py-2 px-6 rounded-lg shadow-lg shadow-green-500/50 transition duration-300 transform hover:scale-105">
                    <a href="/logout">Logout</a>
                </button>
            </div>

            <!-- Main Content Grid -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- User Management -->
                <div class="bg-gray-800 p-6 rounded-xl shadow-lg shadow-green-500/50">
                    <h2 class="text-2xl font-bold text-green-400 mb-4">Manage Users</h2>
                    <p class="text-gray-300 mb-6">View and manage all users registered on the platform.</p>
                    <a href="/admin/allusers">
                        <button
                            class="w-full bg-green-600 hover:bg-green-700 py-3 rounded-lg text-white transition duration-300 transform hover:scale-105">
                            Manage Users
                        </button>
                    </a>
                </div>

                <!-- Product Management -->
                <div class="bg-gray-800 p-6 rounded-xl shadow-lg shadow-green-500/50">
                    <h2 class="text-2xl font-bold text-green-400 mb-4">Manage Products</h2>
                    <p class="text-gray-300 mb-6">Add, update, or remove products available on the platform.</p>
                    <a href="/admin/manageproducts">
                        <button
                            class="w-full bg-green-600 hover:bg-green-700 py-3 rounded-lg text-white transition duration-300 transform hover:scale-105">
                            Manage Products
                        </button>
                    </a>
                </div>

                <!-- Analytics or Dashboard Info -->
                <div class="bg-gray-800 p-6 rounded-xl shadow-lg shadow-green-500/50">
                    <h2 class="text-2xl font-bold text-green-400 mb-4">Dashboard Overview</h2>
                    <p class="text-gray-300 mb-6">View platform statistics and performance metrics.</p>
                    <button
                        class="w-full bg-green-600 hover:bg-green-700 py-3 rounded-lg text-white transition duration-300 transform hover:scale-105">
                        View Analytics
                    </button>
                </div>
            </div>

            <!-- Table Section -->
            <div class="bg-gray-800 p-6 rounded-xl shadow-lg shadow-green-500/50 mt-10">
                <h2 class="text-2xl font-bold text-green-400 mb-6">Admin List</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full text-left text-gray-300">
                        <thead class="bg-gray-700">
                            <tr>
                                <th class="py-3 px-6 text-lg">Name</th>
                                <th class="py-3 px-6 text-lg">Username</th>
                                <th class="py-3 px-6 text-lg">Email</th>
                                <th class="py-3 px-6 text-lg">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(admin of allAdmins){ %>
                                <tr class="border-b border-gray-700">
                                    <td class="py-3 px-6">
                                        <%= admin.name %>
                                    </td>
                                    <td class="py-3 px-6">
                                        <%= admin.username %>
                                    </td>
                                    <td class="py-3 px-6">
                                        <%= admin.email %>
                                    </td>
                                    <td class="py-3 px-6">
                                        <button class="text-green-400 hover:underline">Null</button>
                                        <button class="text-red-400 hover:underline ml-4">Null</button>
                                    </td>
                                </tr>
                                <% } %>
                                    <!-- Add more rows as needed -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>