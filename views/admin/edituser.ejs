<%- layout('./layout/boilerplate.ejs') %>
    <section class="min-h-screen bg-gradient-to-r from-green-100 to-green-50 py-16">
        <div class="container mx-auto max-w-4xl px-6">
            <h1 class="text-4xl font-bold text-green-800 text-center mb-10">Edit User Details</h1>

            <div class="bg-white shadow-lg rounded-lg p-8">
                <form action="/admin/user/<%= user._id %>?_method=PUT" method="POST" class="space-y-6">
                    <div>
                        <label for="name" class="block text-lg font-medium text-green-800 mb-2">Name</label>
                        <input type="text" id="name" name="user[name]" value="<%= user.name %>"
                            placeholder="User's Name"
                            class="w-full p-4 border rounded-lg border-green-300 focus:ring-2 focus:ring-green-400 focus:outline-none">
                    </div>

                    <div>
                        <label for="username" class="block text-lg font-medium text-green-800 mb-2">Username</label>
                        <input type="text" id="username" name="user[username]" value="<%= user.username %>"
                            placeholder="Username"
                            class="w-full p-4 border rounded-lg border-green-300 focus:ring-2 focus:ring-green-400 focus:outline-none">
                    </div>

                    <div>
                        <label for="email" class="block text-lg font-medium text-green-800 mb-2">Email</label>
                        <input type="email" id="email" name="user[email]" value="<%= user.email %>"
                            placeholder="User's Email"
                            class="w-full p-4 border rounded-lg border-green-300 focus:ring-2 focus:ring-green-400 focus:outline-none">
                    </div>

                    <div class="flex justify-between items-center">
                        <button type="submit"
                            class="bg-green-600 text-white py-3 px-6 rounded-lg hover:bg-green-700 transition duration-300">
                            Save Changes
                        </button>
                        <a href="/admin/allusers" class="text-green-700 hover:text-green-800 underline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>